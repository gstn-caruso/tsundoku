<% unless flash[:notice].blank? %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= render 'shared/navbar' %>

<div class="image-gallery">
  <%= link_to 'New Image', new_image_path, class: 'center btn' %>

  <table>
      <% @images.each do |image| %>
        <tr>
          <td style="width: 10%"><%= image.id %></td>
          <td style="width: 20%"><%= image.name %></td>
          <td><%= image_tag image.image_url %></td>
          <td style="width: 20%"><%= link_to 'Show URL', image_path(id: image.id, url: image.image_url) %></td>
          <td style="width: 20%"><%= link_to 'Show QR', controller: 'ar_code', action: 'show', :id => image.id %></td>
        </tr>
      <% end %>
  </table>
</div>